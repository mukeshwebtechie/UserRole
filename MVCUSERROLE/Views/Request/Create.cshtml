    <script>
        $(document).ready(function () {
            $(".datepicker").datepicker({
                changeMonth: true,
                changeYear : true,

                showOn: "both",
                buttonText: "<i class ='fa fa-calendar' style='font-size:10px' ></i>"
            });


        });
        $(document).ready(function () {
            $('.timepicker').timepicker({
                timeFormat: 'h:mm p',
                interval: 15,
                //minTime: '10',
                maxTime: '8:00pm',
                defaultTime: '11',
                startTime: '9:00',
                dynamic: false,
                dropdown: true,
                scrollbar: true
            });
        });

    </script>



}

